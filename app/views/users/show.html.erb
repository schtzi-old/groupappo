<%user = User.where(id: params[:id])[0] %>
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">

        <!--User Profile-->
        <div class="card mb-4">
          <div class="card-body text-center">
          <%= image_tag "avatar-fallback.svg", class: "avatar rounded-circle img-fluid",style: "width: 150px;", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% if user == current_user %>
              <h5 class="my-3"><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></h5>
            <% else %>
              <h5 class="my-3"><%= user.first_name.capitalize %> <%= user.last_name.capitalize[0] %></h5>
            <% end %>
            <p class="text-muted mb-1"><%= user.about %></p>
            <p class="text-muted mb-4"><%= user.level %>, <%= user.country %></p>
            <div class="d-flex justify-content-center mb-2">
              <% if user == current_user %>
              <button type="button" class="btn btn-outline-primary ms-1"><%= link_to "Edit Profile", edit_user_path(current_user.id)%></button>

              <%end%>
            </div>
          </div>
        </div>
        <% if user == current_user %>
          <%= render "friendships/search_friends" %>
          <%= render "friendships/users_friends" %>
          <%= render "friendships/users_pending_requests" %>
        <% else %>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              </li>
            </ul>
          </div>
          </div>
        </div>
        <% end %>

      <!--User Private Info -->
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Username</p>
              </div>
              <div class="col-sm-9">
              <% if user == current_user %>
                <p class="text-muted mb-0"><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></p>
              <% else %>
                <p class="text-muted mb-0"><%= user.first_name.capitalize %> <%= user.last_name.capitalize[0] %></p>
              <% end %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
              <% if user == current_user %>
                <p class="text-muted mb-0"><%= user.email %></p>
              <% else %>
                <p class="text-muted mb-0">Hidden</p>
              <% end %>

              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">About: </p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.about %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Zip Code</p>
              </div>
              <div class="col-sm-9">
              <% if user == current_user %>
                <p class="text-muted mb-0"><%= user.zip_code %></p>
              <% else %>
                <p class="text-muted mb-0">Hidden</p>
              <% end %>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Level</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.level.capitalize %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Country</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.country %></p>
              </div>
            </div>
          </div>
        </div>
        <!--User Private Info End -->
      </div>
    </div>
  </div>
</section>
