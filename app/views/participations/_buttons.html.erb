<% if participant.participation_status == "Pending" || participant.participation_status == "Rejected" %>
  <%= link_to "Accept",
    accept_participation_path(gruppetto, participant),
    data: {turbo_method: :accept},
    class: "btn btn-outline-success btn-sm"
  %>
<% elsif participant.participation_status == "Attending" %>
  <%= link_to "Reject",
    reject_participation_path(gruppetto, participant),
    data: {turbo_method: :reject},
    class: "btn btn-outline-danger btn-sm"
  %>
<% end %>
