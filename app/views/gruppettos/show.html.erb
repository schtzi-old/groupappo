<div class="container">
  <h1> <%= @gruppetto.name %></h1>
  <p> <%= @gruppetto.start.strftime('%d %b %l%P') %></p>

  <div class="d-flex justify-space-between">
    <p> <%= User.find(@gruppetto.user_id).first_name %>  <%= User.find(@gruppetto.user_id).last_name %> is hosting</p>
    <div class="d-flex">
      <i class="fa-solid fa-person-biking"></i>
      <p> <%= @gruppetto.participant_ids.count %> joining </p>
    </div>
  </div>

  <div>
    <div style="width: 80%; height: 200px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="card">
    <p>Distance <%= @gruppetto.track.total_km %></p>
    <p>Pace <%= @gruppetto.avg_speed %></p>
    <p>Incline <%= @gruppetto.track.total_vm %></p>
    <p> <%= @gruppetto.description %></p>
    <%# TO BE UPDATED WHEN GPX FILES ARE AVAILABLE %>
    <%= link_to "Download the route as GPX", root_path %>
  </div>


</div>
