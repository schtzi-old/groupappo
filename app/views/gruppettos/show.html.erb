<div class="container mt-3">
  <h1 class="pt-5"> <%= @gruppetto.name %></h1>
  <p> <%= @gruppetto.start.strftime('%d %b %l%P') %></p>

  <div class="d-flex justify-content-between">
    <div class="">
        <p> <%= User.find(@gruppetto.user_id).first_name %> is hosting</p>
    </div>
    <div class="">
      <div class="d-flex">
        <p class="px-1"><i class="fa-solid fa-person-biking"></i></p>
        <% @attending_count = @gruppetto.participations.count {|attending| attending.participation_status == "Attending" } %>
        <p class="px-1"> <%= @attending_count %> riding </p>
      </div>
    </div>
  </div>

  <% if @gruppetto.participant_ids.include? current_user.id %>
    <% @participant = @gruppetto.participations.find { |participant|
          participant.user_id == current_user.id} %>
            <%= render "participations/status",  participation_status: @participant.participation_status  %>
  <% end %>
  <% if (@gruppetto.participant_ids.include? current_user.id) && (@participant.participation_status == "Attending") %>
        <%= render "participations/delete", { gruppetto: @gruppetto, participant: @participant } %>
    <% end %>

  <div class="py-3">
    <div style="width: 100%; height: 200px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div>
    <%# NEED TO ADD THIS WHEN WE HAVE IMAGES ATTACHED TO ROUTES IN SEED %>
    <%# <%= cl_image_tag @gruppetto.track.image.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="card border-0">
    <div class="row">
      <div class="col-6">
        <div class="d-flex justify-content">
          <p>Distance</p>
          <p><%= @gruppetto.track.total_km %> km</p>
        </div>
        <div class="d-flex">
          <p>Pace</p>
          <p><%= @gruppetto.avg_speed %> km/h</p>
        </div class="d-flex">
        <div class="d-flex">
          <p>Incline</p>
          <p><%= @gruppetto.track.total_vm %> vm</p>
        </div>
      </div>
      <div class="col-6">
        <p> <%= @gruppetto.description %></p>
        <%# TO BE UPDATED WHEN GPX FILES ARE AVAILABLE %>
        <%= link_to "Download the route as GPX", root_path %>
      </div>
    </div>
  </div>


<% if current_user == @gruppetto.user %>
  <div class="border-top mx-3 pt-3">
      <h3 class="text-center">Creator View - Choose who you would like to attend</h3>
      <div class="py-2">
        <% @gruppetto.participations.each do |participant| %>
            <div class="d-flex justify-content-between py-2 border-bottom">
              <%= render "participations/status", participation_status: participant.participation_status %>
              <p class="m-0"><%= participant.user.first_name %> <%= participant.user.last_name %></p>
              <%= render "participations/buttons", participant: participant, gruppetto: @gruppetto %>
            </div>
        <% end %>
      </div>
  </div>
<% end %>

  <%# TO BE THE STANDARDISED FOOTER %>
  <div class="d-flex justify-content-between fixed-bottom bg-white p-2">
    <div class="w-50">
      <%= link_to "Back to Grupettos", gruppettos_path, class: "btn btn-outline-primary w-100" %>
    </div>
    <div class="w-50">
      <%= render "participations/new", gruppetto: @gruppetto, participant: @participant %>
    </div>
  </div>


</div>
