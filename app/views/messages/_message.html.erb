<div id="message-<%= message.id %>" class="py-2">
  <small>
    <% if current_user == message.user %>
      <div class="d-flex flex-row-reverse">
        <div class="card rounded-lg bg-primary shadow-sm border-0 mb-1"style="width: fit-content;">
          <p class="p-2 mb-0"><%= message.content %></p>
        </div>
      </div>
        <div class="ps-2 text-end">
          <small>
            <span><%= message.user.first_name %> </span>
            <i><%= message.created_at.strftime("%e %b at %l:%M %p") %></i>
          </small>
        </div>
    <% else %>
      <div class="card rounded-lg bg-warning shadow-sm border-0 mb-1" style="width: fit-content;">
        <p class="p-2 mb-0"><%= message.content %></p>
      </div>
      <div class="ps-2 d-flex">
        <small>
          <span><%= message.user.first_name %></span>
          <i><%= message.created_at.strftime("%e %b at %l:%M %p") %></i>
        </small>
      </div>
    <% end %>
  </small>
</div>
