<div class="d-flex justify-content-between w-100 bg-dark p-2 align-self-stretch"  style="position:fixed; bottom:0;z-index:10000;">
    <div class='flex-grow-1'>
      <%= link_to gruppettos_path do %>

        <h2 class='m-0 text-center mt-2'><i class="fa-solid fa-house <%= ((request.url.include? "gruppettos") && (!request.url.include? "going") && (!request.url.include? "new")) ? 'text-primary' : '' %>" style='color:white'></i></h2>
      <% end %>
    </div>
    <div class='flex-grow-1'>
        <%= link_to gruppettos_path(type: "going") do %>
          <h2 class='m-0 text-center mt-2'><i class="fa-regular fa-calendar <%= 'text-primary' if (request.url.include? "going")  %>" style='color:white'></i></h2>
        <% end %>
    </div>
    <div class='flex-grow-1'>
        <%= link_to new_gruppetto_path do %>
          <h2 class='m-0 text-center mt-2'><i class="fa-solid fa-circle-plus <%= 'text-primary' if (request.url.include? "new")  %>" style='color:white'></i></h2>
        <% end %>
    </div>
    <div class='flex-grow-1'>
      <%= link_to friendships_path do %>
        <h2 class='m-0 text-center mt-2'><i class="fa-solid fa-user-group <%= 'text-primary' if (request.url.include? "friendships")  %>" style='color:white'></i></h2>
      <% end %>
    </div>
    <div class='flex-grow-1 justify-content-center d-flex'>
      <% if current_user.avatar.key.nil? %>
        <%= image_tag "avatar-fallback.svg", height: 40, width: 40, class: 'rounded-circle shadow-sm' %>
      <% else %>
        <%= cl_image_tag current_user.avatar.key, height: 40, width: 40, crop: :fill, class: 'rounded-circle shadow-sm' %>
      <% end %>
    </div>
</div>
